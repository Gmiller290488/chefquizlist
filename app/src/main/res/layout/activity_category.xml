<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/meringue">
    <TextView
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textAllCaps="true"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/customborder"
        android:id="@+id/all_TV"
        android:text="All"/>
    <TextView
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/chefs_TV"
        android:background="@drawable/customborder_blue"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAllCaps="true"
        android:text="Chefs"/>
    <TextView

        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/foods_TV"
        android:background="@drawable/customborder_red"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textAllCaps="true"
        android:layout_weight="1"
        android:text="Foods"/>
    <TextView
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/nations_TV"
        android:background="@drawable/customborder_purple"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAllCaps="true"
        android:text="Nations"/>
</LinearLayout>