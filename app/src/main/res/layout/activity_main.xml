<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:id="@+id/container"
    tools:context="com.ctingcter.chefquizlist.MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NameAndQuestion">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_TV"
        android:gravity="center"
        />
    <TextView
        android:layout_alignBottom="@+id/name_TV"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Question_TV"
        android:text="Question"
        android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/textQuestion"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NameAndQuestion">
    <TextView
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="#C0C0C0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Answer1_TV"
        android:text="Answer1"
        android:gravity="center"/>

    <TextView
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="#C0C0C0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Answer2_TV"
        android:text="Answer2"
        android:gravity="center"/>

    <TextView
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="#C0C0C0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Answer3_TV"
        android:text="Answer3"
        android:gravity="center"/>

    </LinearLayout>

    <LinearLayout

        android:id="@+id/imageQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/NameAndQuestion">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageAnswer1"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageAnswer2"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageAnswer3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_height="100dp"
            android:text="TIMER:"
            android:id="@+id/Timer_TV"/>

    </LinearLayout>


</RelativeLayout>
