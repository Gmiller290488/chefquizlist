<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/meringue"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.ctingcter.chefquizlist.MainActivity">

    <LinearLayout
        android:id="@+id/innerContainer"
        android:background="@drawable/customborder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/NameAndQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/cardview_shadow_start_color"
                android:backgroundTintMode="src_in"
                android:gravity="center" />

            <TextView
                android:id="@+id/Question_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/name_TV"
                                android:gravity="center"
                android:padding="20dp"
                android:text="Question" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/textQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NameAndQuestion"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Answer1_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#C0C0C0"
                android:gravity="center"
                android:padding="10dp"
                android:text="Answer1" />

            <TextView
                android:id="@+id/Answer2_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#C0C0C0"
                android:gravity="center"
                android:padding="10dp"
                android:text="Answer2" />

            <TextView
                android:id="@+id/Answer3_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#C0C0C0"
                android:gravity="center"
                android:padding="10dp"
                android:text="Answer3" />

        </LinearLayout>

        <LinearLayout

            android:id="@+id/imageQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NameAndQuestion"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageAnswer1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imageAnswer2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imageAnswer3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center">

        <TextView
            android:id="@+id/Timer_TV"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:gravity="center_horizontal"
            />

    </LinearLayout>


</RelativeLayout>
